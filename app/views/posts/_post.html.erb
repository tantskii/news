<div class="well">
  <h2><%= post.title %></h2>
  <div class="row">
    <% if post.photo %>
        <div class="col-sm-3">
          <img src="<%= post.photo %>" alt="[PHOTO]" width="150" height="150">
        </div>
        <div class="col-sm-9">
          <div class="thumbnail">
            <p><%= post.description %></p>
            <%= link_to 'Узнать подробнее', post.link %>
          </div>
        </div>
    <% else %>
        <div class="col-sm-12">
          <div class="thumbnail">
            <p><%= post.description %></p>
            <%= link_to 'Узнать подробнее', post.link %>
          </div>
        </div>
    <% end %>
  </div>

  <div>
    <% if post.information_source.logo %>
        <img class="interest-logo-small" src="<%= post.information_source.logo %>">
    <% else %>
        <p><%= post.information_source.name %></p>
    <% end %>
  </div>
  <div>
    <small class="float-right"><%= post.pub_date %></small>
  </div>
</div>