<div class="well">
  <h2><%= post.title %></h2>
  <div class="row">
    <div class="col-sm-3">
      <img src="<%= post.photo %>" alt="[PHOTO]" width="150" height="150">
    </div>
    <div class="col-sm-9">
      <p><%= post.description %></p>
      <%= link_to 'Узнать подробнее', post.link %>
    </div>
  </div>
  <div>
    <small class="date-right"><%= post.pub_date %></small>
  </div>
</div>