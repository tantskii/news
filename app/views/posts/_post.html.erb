<div class="well">
  <h2><%= post.title %></h2>
  <div class="row">
    <div class="col-sm-3">
      <img src="<%= post.photo %>" alt="[PHOTO]" width="150" height="150">
    </div>
    <div class="col-sm-9">
      <div class="thumbnail">
        <p><%= post.description %></p>
        <%= link_to 'Узнать подробнее', post.link %>
      </div>
    </div>
  </div>

  <div class="float-right">
    <img class="interest-logo" src="<%= post.information_source.logo %>" alt="<%= post.information_source.name %>">
  </div>
  <div>
    <small class="float-right"><%= post.pub_date %></small>
  </div>
</div>